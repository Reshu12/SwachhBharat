<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F4FEF4"
    tools:context="com.example.reshugoel.swachhbharat.Login">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="138dp"
        android:layout_marginTop="64dp"
        android:text="LOGIN"
        android:textColor="#000000"
        android:textSize="30dp"
        android:gravity="center"
        android:textStyle="bold"
        android:id="@+id/textView6" />

    <TextView
        android:id="@+id/user"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textView6"
        android:layout_marginStart="28dp"
        android:layout_marginTop="39dp"
        android:text="Username"
        android:textColor="#000000"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/p"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/user"
        android:layout_below="@+id/user"
        android:layout_marginTop="29dp"
        android:text="Password"
        android:textColor="#000000"
        android:textSize="20dp" />

    <EditText
        android:id="@+id/em"
        android:layout_width="230dp"
        android:layout_height="40dp"
        android:layout_alignBaseline="@+id/user"
        android:layout_alignBottom="@+id/user"
        android:layout_alignStart="@+id/pa"
        android:hint="Enter username"
        android:inputType="textEmailAddress" />

    <EditText
        android:id="@+id/pa"
        android:layout_width="230dp"
        android:layout_height="40dp"
        android:layout_alignBaseline="@+id/p"
        android:layout_alignBottom="@+id/p"
        android:layout_alignStart="@+id/textView6"
        android:hint="Enter password"
        android:inputType="textPassword" />

    <Button
        android:id="@+id/log"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/pa"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="29dp"
        android:text="LOGIN"
        android:background="@drawable/button"
        android:textColor="#fff"
        android:textStyle="bold" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/log"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:text="New user? Sign up here."
        android:textColor="#000000"
        android:textSize="18dp"
        android:clickable="true"
        android:id="@+id/signup"/>

</RelativeLayout>
